<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Configuración de bloqueo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css" />
</head>
<body class="bg-light">
  <div class="container py-5">
    <h1 class="mb-4">Configuración de Dispositivos Restringidos</h1>
    <form action="/config" method="POST">
      <!-- Dispositivos -->
      <div class="mb-3">
        <label class="form-label">Tipos de dispositivo</label>
        <select class="form-select" name="bloqueo[dispositivos][]" multiple>
          <% deviceTypes.forEach(function(type) { %>
            <option value="<%= type %>"><%= type %></option>
          <% }); %>
        </select>
      </div>
      <!-- Sistemas Operativos -->
      <div class="mb-3">
        <label class="form-label">Sistemas Operativos</label>
        <select class="form-select" name="bloqueo[sistemas_operativos][]" multiple>
          <% osSystems.forEach(function(os) { %>
            <option value="<%= os %>"><%= os %></option>
          <% }); %>
        </select>
      </div>
      <!-- Navegadores -->
      <div class="mb-3">
        <label class="form-label">Navegadores</label>
        <select class="form-select" name="bloqueo[navegadores][]" multiple>
          <% browsers.forEach(function(browser) { %>
            <option value="<%= browser %>"><%= browser %></option>
          <% }); %>
        </select>
      </div>
      <!-- Tipos de cliente -->
      <div class="mb-3">
        <label class="form-label">Tipos de Cliente</label>
        <select class="form-select" name="bloqueo[tipos_cliente][]" multiple>
          <% clientTypes.forEach(function(type) { %>
            <option value="<%= type %>"><%= type %></option>
          <% }); %>
        </select>
      </div>
      <!-- Marcas -->
      <div class="mb-3">
        <label class="form-label">Marcas</label>
        <select class="form-select" name="bloqueo[marcas][]" multiple>
          <% brands.forEach(function(brand) { %>
            <option value="<%= brand %>"><%= brand %></option>
          <% }); %>
        </select>
      </div>
      <!-- Modelos -->
      <div class="mb-3">
        <label class="form-label">Modelos (separados por coma)</label>
        <input class="form-control" name="bloqueo[modelos]" placeholder="Ej: iPhone 13, SM-A505G" />
      </div>
      <button type="submit" class="btn btn-primary">Guardar configuración</button>
    </form>
  </div>
  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
  <script>
    document.querySelectorAll('select[multiple]').forEach(select => {
      new Choices(select, {
        removeItemButton: true,
        shouldSort: false,
        placeholderValue: 'Selecciona...',
        noResultsText: 'Sin resultados',
      });
    });
  </script>
</body>
</html> 